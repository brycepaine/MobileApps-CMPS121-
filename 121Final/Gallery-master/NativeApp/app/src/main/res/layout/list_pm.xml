<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="15dp"

                 />

            <RelativeLayout
                android:id="@+id/divider"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/dark_gray"
                android:layout_alignBottom="@+id/profile"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/pm"
                android:text = "sdfasdfk asdf asdf asfd asdfasdf asdf a sdfa sdfasdfa sdf asdf as df asdf asdf asd f"
                android:textColor="@color/jet"
                android:maxLines="1"
                android:maxWidth="250dp"
                android:layout_below="@+id/pm_from"

                android:layout_toRightOf="@+id/profile"
                android:layout_above="@+id/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pm_from"
                android:text="from"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:textColor="@color/jet_light"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/profile"
                android:layout_toEndOf="@+id/profile" />

            <TextView
                android:id="@+id/pm_time"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:text="day ago"
                android:layout_height="wrap_content"
                android:textColor="@color/jet_light"
                android:layout_alignTop="@+id/pm"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />





            <!--<ImageButton-->
            <!--android:src="@drawable/ic_comment_black_24dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/btn"-->
            <!--android:background="@android:color/white"-->

            <!--android:layout_below="@+id/description"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="1dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/pm"
                android:text = "sdfasdfk asdf asdf asfd asdfasdf asdf a sdfa sdfasdfa sdf asdf as df asdf asdf asd f"
                android:textColor="@color/jet"
                android:layout_below="@+id/pm_from"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pm_from"
                android:text="From: "
                android:textStyle="italic"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/jet_light"/>

            <TextView
                android:id="@+id/pm_time"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:text="day ago"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:textColor="@color/jet_light"
                android:layout_toRightOf="@+id/pm_from"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:id="@+id/view_conversation"
                android:text="View"
                android:textSize="9dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />



            <!--<ImageButton-->
            <!--android:src="@drawable/ic_comment_black_24dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/btn"-->
            <!--android:background="@android:color/white"-->

            <!--android:layout_below="@+id/description"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
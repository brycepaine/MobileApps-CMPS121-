<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="1dp"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/prof_pic"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/comment_from"
                    android:layout_alignParentStart="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_from"
                    android:text="Bryce"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </FrameLayout>








            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/comment"
                android:text = "sdfasdfk asdf asdf asfd"
                android:textColor="@color/jet"
                android:layout_toRightOf="@+id/frame"
                android:paddingRight="40dp"
                android:paddingLeft="10dp"/>




            <TextView
                android:id="@+id/comment_time"
                android:text = "5 hours ago"
                android:textColor="@color/jet"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id ="@+id/delete_comment"
                android:src="@drawable/ic_delete_black_24dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/comment_time"
                android:layout_alignEnd="@+id/comment_time" />



            <!--<ImageButton-->
            <!--android:src="@drawable/ic_comment_black_24dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/btn"-->
            <!--android:background="@android:color/white"-->

            <!--android:layout_below="@+id/description"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
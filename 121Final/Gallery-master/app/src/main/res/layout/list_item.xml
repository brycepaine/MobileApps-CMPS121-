<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="8dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/prof_pic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="name"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/prof_pic"
                android:paddingLeft="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timestamp"
                android:text="thththht"
                android:textColor="@color/jet"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/marker"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@+id/timestamp"
                android:tint="@color/primary"
                android:layout_marginLeft="-10dp"
                android:layout_alignLeft="@id/timestamp"
                android:src="@drawable/ic_place_white_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/miles_away"
                android:text = "distance"
                android:textColor="@color/oil"
                android:layout_toRightOf="@+id/marker"
                android:layout_below="@+id/timestamp"/>


            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:adjustViewBounds="true"
                android:layout_below="@+id/prof_pic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:text="description"
                android:textColor="@android:color/black"
                android:layout_below="@+id/item_img"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:layout_alignParentLeft="true" />



            <!--<ImageButton-->
                <!--android:src="@drawable/ic_comment_black_24dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/btn"-->
                <!--android:background="@android:color/white"-->

                <!--android:layout_below="@+id/description"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


